{% extends 'base.html.twig' %}

{% block body %}
    <nav class="columns">
        <div class="column is-full" {{ stimulus_controller('token-choices') }}>
            <div class="" data-token-choices-target="holder"></div>
            <form data-token-choices-target="form" class="">
                <div>
                    <select class="form-control"
                        id="token-choices"
                        onchange="window.location.replace('?identifier=' + this.value)"
                        class="">
                        {% for t in tokens %}
                            {% set selected = t.identifier
                                == selectedToken.identifier
                                ? 'selected'
                                : ''
                            %}
                            <option value="{{ t.identifier }}"
                                {{ selected }}
                                class="">
                                {{ t.symbol }} {% if t.name is defined %}
                                    ({{ t.name }})
                                {% endif %}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </form>
        </div>
    </nav>

    {{ render_chart(chart) }}
{% endblock %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>
      {{ siteTitle }} -{% block title %}

      {% endblock %}
    </title>
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body>
    <div class="container">
      <div class="page-top">
        <header class="header">
          <div data-controller="wallet">
            <div data-wallet-target="activeAccount"></div>
            <button data-action="wallet#requestPermissions">
              Connect Wallet
            </button>
            <button data-action="wallet#clearActiveAccount">
              Disconnect Wallet
            </button>
          </div>
        </header>
      </div>

      {% block body %}

      {% endblock %}
    </div>
  </body>
</html>

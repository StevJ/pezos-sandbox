<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>
      {{ siteTitle }} -{% block title %}

      {% endblock %}
    </title>
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body>
    <div class="container">
      <div class="alerts mb-3 mt-3">
        {% for key, messages in app.flashes() %}
          {% for message in messages %}
            <div class="alert alert-{{ key }}">
              {{ message }}
            </div>
          {% endfor %}
        {% endfor %}
      </div>
      <div class="page-top">
        <header class="header">
          <div {{
            stimulus_controller(
              'wallet',
              {
                requestAccessUrl: path('request_access'),
                isAuthenticated: is_granted('IS_AUTHENTICATED_FULLY')
              }
            )
            }}>
            <span data-wallet-target="activeAccount">
              <span class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden">Loading...</span>
              </span>
            </span>
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
              <button class="btn btn-default btn-sm" data-wallet-target="requestAccessButton" disabled class="btn btn-primary btn-sm" data-action="wallet#requestAccess" title="Login or Create Account">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
  <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
</svg>
              </button>
              {% else %}
                  <a class="btn btn-default btn-sm" href={{ path('member_area_index') }}>
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
  <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
</svg>

                      </a>
                  <a class="btn btn-primary btn-sm" href={{ path('logout') }}>
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
  <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
</svg>
                      </a>
            {% endif %}
          </div>
        </header>
      </div>

      {% block body %}

      {% endblock %}
    </div>
  </body>
</html>

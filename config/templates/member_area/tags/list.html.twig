{% extends 'base.html.twig' %}

{% block title %}
    Tags
{% endblock %}

{% block body %}
    {% include './member_area/_header.html.twig' %}

    <div class="flex flex-row mt-8">
        <a href="{{ path('app_tag_new') }}"
            class="no-underline btn btn-primary">
            Add Tag
        </a>
    </div>

    <div class="w-full py-8">
        <div class="overflow-hidden border-b border-gray-200 rounded shadow">
            <table class="min-w-full bg-white dark:bg-gray-700">
                <thead class="text-white bg-gray-800 dark:bg-gray-600">
                    <tr>
                        <th class="w-1/3 px-4 py-3 text-sm font-semibold text-left uppercase">
                            Label
                        </th>
                        <th class="px-4 py-3 text-sm font-semibold text-left uppercase">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="text-gray-700 dark:text-gray-100">
                    {% for tag in tags %}
                        {% if loop.index is even %}
                            {% set trClass = 'bg-gray-100 dark:bg-gray-400 text-black' %}
                        {% else %}
                            {% set trClass = '' %}
                        {% endif %}
                        <tr class="{{ trClass }}">
                            <td class="w-1/3 px-4 py-3 text-left">
                                {{ tag.label }}
                            </td>
                            <td class="px-4 py-3">
                                <div class="inline-flex">
                                <a href="{{
                                    path(
                                        'app_tag_edit',
                                        {
                                            tagId: tag.tagId
                                        }
                                    )
                                    }}"
                                    class="no-underline btn btn-primary mr-4">
                                    Edit
                                </a>
                                <form action="{{ path('app_tag_delete', {tagId: tag.tagId }) }}" method="post">
                                    <input type="hidden" name="_method" value="DELETE" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                                </div>
                            </td>
                        </tr>

                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

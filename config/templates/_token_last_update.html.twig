{% if tokenLastUpdate is not empty %}
    <ul class="flex flex-row justify-between p-4 mb-2 text-sm shadow">
        <li>
            <span>
                {{
                    (tokenLastUpdate.tez_pool
                        / tokenLastUpdate.token_pool)|number_format(6)
                }}&nbsp;ꜩ (1&nbsp;ꜩ = {{
                    (tokenLastUpdate.token_pool
                        / tokenLastUpdate.tez_pool)|number_format(
                        token.metadata.decimals
                    )
                }} {{ token.metadata.symbol }})
            </span>
        </li>
        <li>
            <span>
                LP {{ tokenLastUpdate.tez_pool|number_format(6) }}&nbsp;ꜩ / {{
                    tokenLastUpdate.token_pool|number_format(
                        token.metadata.decimals
                    )
                }}
                {{ token.metadata.symbol }}
            </span>
        </li>
        <li><span>{{ tokenLastUpdate.datetime }} (UTC)</span></li>
    </ul>
{% endif %}
